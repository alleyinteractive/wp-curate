{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "wp-curate/query",
  "version": "0.1.0",
  "title": "Query",
  "category": "theme",
  "icon": "filter",
  "description": "Custom queries for WP Curate",
  "textdomain": "wp-curate",
	"editorScript": "file:index.ts",
	"editorStyle": "file:index.css",
	"style": [
		"file:style-index.css"
	],
  "providesContext": {
    "query": "query",
    "displayLayout": "displayLayout",
    "heading": "heading",
    "curation": "curation"
  },
  "attributes": {
    "perPage": {
      "type": "number",
      "default": 10
    },
    "pages": {
      "type": "number",
      "default": 1
    },
    "offset": {
      "type": "number",
      "default": 0
    },
    "postType": {
      "type": "array",
      "default": ["post"],
      "items": {
        "type": "string"
      }
    },
    "author": {
      "type": "array",
      "default": [],
      "items": {
        "type": "number"
      }
    },
    "search": {
      "type": "string",
      "default": ""
    },
    "taxQuery": {
      "type": "object",
      "default": {},
      "items": {
        "type": "array"
      }
    }
  }
}
